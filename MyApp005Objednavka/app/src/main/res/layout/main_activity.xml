<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vyber si grafickou kartu:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_amd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMD 480x"
            android:buttonTint="?android:attr/colorAccent"/>

        <RadioButton
            android:id="@+id/radio_gtx950"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GTX 950"
            android:buttonTint="?android:attr/colorAccent"
            android:layout_marginTop="8dp" />

        <RadioButton
            android:id="@+id/radio_gtx1050"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GTX 1050"
            android:buttonTint="?android:attr/colorAccent"
            android:layout_marginTop="8dp" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/checkbox_option1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extra chlazení"
        android:buttonTint="?android:attr/colorAccent"
        android:layout_marginTop="16dp" />

    <CheckBox
        android:id="@+id/checkbox_option2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Přetaktování"
        android:buttonTint="?android:attr/colorAccent"
        android:layout_marginTop="8dp" />

    <CheckBox
        android:id="@+id/checkbox_option3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RGB osvětlení"
        android:buttonTint="?android:attr/colorAccent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/text_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shrnutí objednávky:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Objednávka"
        android:layout_marginTop="16dp"
        android:backgroundTint="?android:attr/colorPrimary"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="16dp" />

</LinearLayout>
